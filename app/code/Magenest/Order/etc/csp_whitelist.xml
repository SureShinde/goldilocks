<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="facebook_connect" type="host">www.facebook.com</value>
                <value id="google_map" type="host">maps.googleapis.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="facebook_image" type="host">www.facebook.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="fontawesome_fonts" type="host">maxcdn.bootstrapcdn.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="bootstrap_fonts" type="host">maxcdn.bootstrapcdn.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
