<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Framework\View\Element\Template"
                   name="product.preorder"
                   template="Amasty_Preorder::product/view/preorder/configurable.phtml"
                   ifconfig="ampreorder/functional/enabled"
                   after="-"
            >
                <arguments>
                    <argument name="preorder_view_model" xsi:type="object">Amasty\Preorder\ViewModel\Product\View\Preorder</argument>
                    <argument name="preorder_configurable_view_model" xsi:type="object">Amasty\Preorder\ViewModel\Product\View\PreorderConfigurable</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
