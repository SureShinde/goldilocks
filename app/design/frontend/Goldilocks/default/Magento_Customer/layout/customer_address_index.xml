<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title.mobile">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Address</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Account</item>
                    <item name="label" xsi:type="string" translate="true">Account</item>
                    <item name="link" xsi:type="string">/customer/account/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Address</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">My Address</item>
                    <item name="label" xsi:type="string" translate="true">My Address</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
