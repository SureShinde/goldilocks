<script>
    require([
        'jquery'
    ], function($){
        $('.show-password').on('click', function () {
            let input = $(this).siblings('.input-text');

            $(this).toggleClass('show');

            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        })
    });
</script>
